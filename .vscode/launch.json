{
    "configurations": [
        {
            "name": "Next.js: debug server-side",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run dev",
            "command": "npm run dev",
            "resolveSourceMapLocations" : [
                "${workspaceFolder}/.next",
                "${workspaceFolder}/.next",
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "env": {
                "NODE_OPTIONS": "--inspect=9230"
            },
        },
        {
            "name": "Next.js: debug client-side",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "cwd": "${workspaceFolder}",
            "serverReadyAction":{
                "action": "startDebugging",
                "config": {
                    "type": "node",
                    "request": "launch"
                },
            }  
        },
        {
            "name": "Run tests",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run test",
            "command": "npm run test",
            "resolveSourceMapLocations" : [
                "${workspaceFolder}/.next",
                "${workspaceFolder}/.next",
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
        }
    ],
    
    "compounds": [
        {
            "name": "-> Full stack",
            "name": "-> Full stack",
            "configurations": [
                // "Next.js: debug server-side", 
                "Next.js: debug client-side"
            ],
            "preLaunchTask": "npm: dev - Frontend",
            "stopAll": true
        }
    ]
}